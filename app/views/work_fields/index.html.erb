<p id="notice"><%= notice %></p>

<h3>Listing Work Fields</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Field name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= will_paginate @city, renderer: BootstrapPagination::Rails %>
    <% @work_fields.each do |work_field| %>
      <tr>
        <td><%= work_field.field_name %></td>
        <td><%= link_to 'Show', work_field, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_work_field_path(work_field), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', work_field, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

