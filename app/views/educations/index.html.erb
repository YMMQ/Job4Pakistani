<p id="notice"><%= notice %></p>

<h1>Listing Educations</h1>

<table>
  <thead>
    <tr>
      <th>Division</th>
      <th>Obtained marks</th>
      <th>Pass year</th>
      <th>User</th>
      <th>Degre</th>
      <th>Institute</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @educations.each do |education| %>
      <tr>
        <td><%= education.division %></td>
        <td><%= education.obtained_marks %></td>
        <td><%= education.pass_year %></td>
        <td><%= education.degre.name %></td>
        <td><%= education.institute.name %></td>
        <td><%= link_to 'Show', education %></td>
        <td><%= link_to 'Edit', edit_education_path(education) %></td>
        <td><%= link_to 'Destroy', education, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

