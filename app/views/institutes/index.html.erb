<p id="notice"><%= notice %></p>

<h3>Listing Institutes</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= will_paginate @institute, renderer: BootstrapPagination::Rails %>
    <% @institutes.each do |institute| %>
      <tr>
        <td><%= institute.name %></td>
        <td><%= institute.city.name %></td>
        <td><%= link_to 'Show', institute, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_institute_path(institute), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', institute, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Institute', new_institute_path %>
