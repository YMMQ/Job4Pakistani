<p id="notice"><%= notice %></p>

<h3>Listing Organizations</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= will_paginate @organization, renderer: BootstrapPagination::Rails %>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name %></td>
        <td><%= link_to 'Show', organization, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_organization_path(organization), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Organization', new_organization_path %>
